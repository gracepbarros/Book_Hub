{
    "name": "book-hub-app",
    "version": "1.0",
    "scripts": {
      "start": "cd client && npm run build && cd ../backend && node server.js",
      "server": "nodemon backend/server.js",
      "client": "cd client && npm run dev",
      "dev": "concurrently \"npm run server\" \"npm run client\"",
      "build": "cd client && npm run build"
    },
  
  "devDependencies": {
    "concurrently": "^8.2.2"
  },

  "dependencies": {
    "nodemon": "^3.1.4"
  },

  "engines": {
  "node": "15.1"
  }
}
